  "components": {
    "schemas": {
      "CreditCardModel": {
        "type": "object",
        "properties": {
          "cardNumber": {
            "type": "string",
            "nullable": true
          },
          "expiryDateMonth": {
            "type": "integer",
            "format": "int32"
          },
          "expiryDateYear": {
            "type": "integer",
            "format": "int32"
          },
          "ccv": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PaymentModel": {
        "type": "object",
        "properties": {
          "paymentId": {
            "type": "string",
            "format": "uuid"
          },
          "merchantId": {
            "type": "string",
            "format": "uuid"
          },
          "externalShopperIdentifier": {
            "type": "string",
            "nullable": true
          },
          "createDate": {
            "type": "string",
            "format": "date-time"
          },
          "creditCard": {
            "allOf": [
              {
                "$ref": "#/components/schemas/CreditCardModel"
              }
            ],
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetPaymentResponseModel": {
        "type": "object",
        "properties": {
          "payment": {
            "allOf": [
              {
                "$ref": "#/components/schemas/PaymentModel"
              }
            ],
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ErrorResponseModel": {
        "type": "object",
        "properties": {
          "errorDescription": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "PostPaymentRequestModel": {
        "type": "object",
        "additionalProperties": false
      },
      "PostPaymentResponseModel": {
        "type": "object",
        "properties": {
          "wasPaymentSuccessful": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  }

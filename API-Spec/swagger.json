            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/GetPaymentResponseModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetPaymentResponseModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetPaymentResponseModel"
                }
              }
            }
          },
          "400": {
            "description": "The request data is invalid",

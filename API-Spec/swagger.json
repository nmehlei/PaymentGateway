            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostPaymentRequestModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PostPaymentRequestModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PostPaymentRequestModel"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "The payment was created",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/PostPaymentResponseModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostPaymentResponseModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostPaymentResponseModel"
